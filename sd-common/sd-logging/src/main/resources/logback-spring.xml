<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="service"/>

    <property name="LOGGING_LEVEL_ROOT" value="${LOG_LEVEL_ROOT:-INFO}"/>
    <property name="LOGGING_LEVEL_APP" value="${LOG_LEVEL_APP:-INFO}"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] ${APP_NAME} [%X{traceId:-}] [%X{userId:-}] %logger{36} - %msg%n"/>

    <springProfile name="!prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <logger name="ru.ryatronth" level="${LOGGING_LEVEL_APP}" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <root level="${LOGGING_LEVEL_ROOT}">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <version/>
                    <logLevel/>
                    <threadName/>
                    <loggerName/>
                    <message/>
                    <arguments/>
                    <stackTrace/>
                    <mdc/>
                </providers>
            </encoder>
        </appender>

        <logger name="ru.ryatronth" level="${LOGGING_LEVEL_APP}" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
        </logger>

        <root level="${LOGGING_LEVEL_ROOT}">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
    </springProfile>

</configuration>
